<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%white(${profile}) | %white(%d{HH:mm:ss.SSS}) | %white(%thread) | %highlight(%-5level) | %yellow(%logger{0}) | %msg%n </pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="console"/>
    </root>
</configuration>


